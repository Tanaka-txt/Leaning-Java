

public class Main {
// Tudo que estiver dentro do puclib static.... é oque vai ser primeiro executado
	public static void main(String[] args) { // Esse é o entre point da nossa aplicação
		// This is a comment :D
		System.out.println("Hellos everbody! ksks No, no.... This is fucked, HELLO WORLD!");
		//System.out.println = This is a fucking a "printf" Im screwed :P
		
		//break line 
		System.out.println("Quebra de linha");
		
        // Without break line
		System.out.print("Quebra de linha");
		System.out.println("%n"); // Break line
		
		//Example data out
		int var_int = 32;
		System.out.println(var_int);
		
		// Example float/double data out
		double x = 10.35784;
		System.out.println(x); // No formated
		System.out.printf("%.2f%n", x); // Formated %.2f = 10.36
		
		// My computer's language is English, so my comma is a ".", but if my computer's language is Portuguese, I need to have = Locale.setDefault(Locale.US);
		// To use the locale, I need to import = import java.util.Locale; in my initial program
		
		// Concatenando = Juntar 
		System.out.println("RESUTADO = " + x + " Metros");
		
		// Concatenando Varios elementos
		System.out.printf("RESULTADO: %.2f mentros%n", x); // Formated
		
		// Example:
		String nome = "Maria";
		int idade = 31;
		double renda = 4000.0;
		System.out.printf("%s, tem uma renda de R$ %.2f, com %d anos%n", nome, renda, idade);
		// %d - int
		// %f - double or float
		// %s - String
		// %n - break line
		
		System.out.printf("%n-=== Exercise ===-%n");
		// Exercise
		String product1 = "Computer";
		String product2 = "Office desk";
		
		int age = 30;
		int code = 5290;
		char gender = 'F';
		
		double price1 = 2100.0;
		double price2 = 650.50;
		double measure = 53.234567;
		
		System.out.printf("Products:%n%s, which price is R$ %.2f%n%s, which price is R$ %.2f%n", product1, price1, product2, price2);
		System.out.printf("Record: %d years old, code %d ande gender: %c%n", age, code, gender);
		System.out.printf("Measue with eight decimal place: %.2f%nRouded (threee decimal places): %.3f%nUS decimal point: %.3f", measure, measure, measure);
		System.out.printf("%n-===============-%n");
		
		// Processamento de dados, Casting
		int z, c;
		double f;
		// Processo de dados acontece por meio de atribuições
		z = 5;
		c = 2 * z;
		System.out.println(z);
		System.out.println(c);
		
		f = 2 * z;
		System.out.println(z);
		System.out.println(f); // Foi convertido para o tipo doble 10.0
		
		// Area trapezio
		System.out.println();
		double h, b, B;
		h = 5.0; // Double = numero.0
		b = 6.0; // Float = numerof
		B = 8.0;
		double area = ((b+B) / 2) * h;
		System.out.println(area);
		
		// Exemplo Casting1
		System.out.println();
		int a,d;
		double resultado;
		
		a = 5;
		d = 2;
		
		resultado = (double) a / d; // Ele vai resultar em 2, mas como é uma conta de int, não sai o real resultado.
		// Para resolver isso usamos o casting para converter o valor (double)
		System.out.println(resultado);
		
		// Exemplo casting 2
		System.out.println();
		double g;
		int r;
		
		g = 5.0;
		r = g; // b = a passa uma string de numero, 
		System.out.printf("Sem casting: %f%n", r);
		r = (int) g;
	}

}

// I saw arithmetic operations:
// Mult = 2 * 2
// Add and Sub = 1 + 1 | 2 - 1
// Div = 4 / 2
// Mod = 4 % 2

// I saw variables:
// Variable = data stored in memory, in C, this is logical.
// <tipo> <name> = <data / value> (Optional)
// int idade = 25;
// double altura = 1.68;
// char sexo = 'F';
// Posso receber endereço

// Tipos - 
// Int = 32 bits
// long = 64 bits 
// float = 32 bits
// double = 64 bits
// char = 16 bits
// boolean = 1 bit
// char = 16 bits "Recebem unicode"

